# up instead of cd../..
# From http://serverfault.com/questions/3743/what-useful-things-can-one-add-to-ones-bashrc
up(){
    local d=""
    limit=$1
    for ((i=1 ; i <= limit ; i++))
            do
                    d=$d/..
            done
    d=$(echo $d | sed 's/^\///')
    if [ -z "$d" ]; then
            d=..
    fi
    cd $d
}
