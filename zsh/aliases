# Try to extract everything
extract() {
    if [ -f "$1" ] ; then
        case "$1" in
            *.tar.bz2)   tar xvjf "$1"  ;;
            *.tar.gz)    tar xvzf "$1"  ;;
            *.bz2)       bunzip2 "$1"   ;;
            *.rar)       unrar x "$1"   ;;
            *.gz)        gunzip "$1"    ;;
            *.tar)       tar xvf "$1"   ;;
            *.tbz2)      tar xvjf "$1"  ;;
            *.tgz)       tar xvzf "$1"  ;;
            *.zip)       unzip "$1"     ;;
            *.Z)         uncompress "$1";;
            *.7z)        7z x "$1"      ;;
            *)           echo "'$1' cannot be extracted via >extract<" ;;
        esac
    else
        echo "'$1' is not a valid file"
    fi
}
##############################################

##############################################
# edit various confs
conf() {
    case $1 in
    zshrc)     vim ~/.zshrc ;;
    xinit)     vim ~/.xinitrc ;;
    xres)      vim ~/.Xresources && xrdb ~/.Xresources ;;
    sxhkd)     vim ~/.config/sxhkd/sxhkdrc ;;
    ncmpcpp)   vim ~/.ncmpcpp/config ;;
    ranger)    vim ~/.config/ranger/rc.conf ;;
    tmux)      vim ~/.tmux.conf ;;
    vimrc)     vim ~/.vimrc ;;
    ranger)     vim ~/.config/ranger/rc.conf ;;
    php)	   sudo vim /etc/php5/apache2/php.ini ;;
    apache)	   suco vim /etc/apache2/apache2.conf ;;
    mpd)        vim ~/.mpdconf ;;
        *)			echo "Unknown application: $1" ;;
    esac
}
